<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myColorBackgroundOrange"
    android:gravity="center">



        <com.google.android.flexbox.FlexboxLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:alignItems="center"
            app:flexWrap="wrap"
            app:justifyContent="flex_start">

            <android.support.v7.widget.AppCompatButton
                android:layout_margin="5dp"
                android:drawableTint="@color/myColorIconAdminPriveleges"
                android:drawableTop="@drawable/ic_people_black_48px"
                android:id="@+id/btnStaff"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:elevation="4dp"
                android:text="Staff"
                android:textAllCaps="false"
                android:textColor="@color/myColorWhite"
                android:shadowColor="@color/myColorActionBar"
                android:background="@drawable/custom_button_rounded8"
                app:layout_flexBasisPercent="button_rounded"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_margin="5dp"
                android:drawableTint="@color/myColorIconAdminPriveleges"
                android:drawableTop="@drawable/ic_shopping_cart_black_48px"
                android:id="@+id/btnProduct"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:elevation="4dp"
                android:text="Products"
                android:textAllCaps="false"
                android:textColor="@color/myColorWhite"
                android:shadowColor="@color/myColorActionBar"
                android:background="@drawable/custom_button_rounded8"
                app:layout_flexBasisPercent="button_rounded"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_margin="5dp"
                android:drawableTint="@color/myColorIconAdminPriveleges"
                android:drawableTop="@drawable/ic_assignment_black_48px"
                android:id="@+id/btnJournal"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:elevation="4dp"
                android:text="Journals"
                android:textAllCaps="false"
                android:textColor="@color/myColorWhite"
                android:shadowColor="@color/myColorActionBar"
                android:background="@drawable/custom_button_rounded8"
                app:layout_flexBasisPercent="button_rounded"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_margin="5dp"
                android:drawableTint="@color/myColorIconAdminPriveleges"
                android:drawableTop="@drawable/ic_assignment_black_48px"
                android:id="@+id/btnD"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:elevation="4dp"
                android:text="Placeholder"
                android:textAllCaps="false"
                android:textColor="@color/myColorWhite"
                android:shadowColor="@color/myColorActionBar"
                android:background="@drawable/custom_button_rounded8"
                app:layout_flexBasisPercent="button_rounded"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_margin="5dp"
                android:drawableTint="@color/myColorIconAdminPriveleges"
                android:drawableTop="@drawable/ic_assignment_black_48px"
                android:id="@+id/btnDu"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:elevation="4dp"
                android:text="Placeholder"
                android:textAllCaps="false"
                android:textColor="@color/myColorWhite"
                android:shadowColor="@color/myColorActionBar"
                android:background="@drawable/custom_button_rounded8"
                app:layout_flexBasisPercent="button_rounded"/>


        </com.google.android.flexbox.FlexboxLayout>




</LinearLayout>