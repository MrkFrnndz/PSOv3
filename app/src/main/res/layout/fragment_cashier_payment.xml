<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:alignItems="center"
    app:flexWrap="wrap"
    app:flexDirection="row"
    app:justifyContent="space_around"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/myColorBackgroundCashier"
    android:padding="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_flexBasisPercent="@fraction/fraction100percent"
        android:elevation="2dp">

        <!--<TextView-->
        <!--android:textColor="@color/myColorWhite"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Payment Mode"-->
        <!--android:textSize="30sp"-->
        <!--android:padding="20dp"-->
        <!--android:background="@color/myColorHeading"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <EditText
                android:id="@+id/txt_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext_cash"
                android:gravity="right"
                android:hint="Php 0.00"
                android:inputType="numberDecimal"
                android:padding="5dp"
                android:textColorHint="@color/myColorEditTextDialogDisable"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_tender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".3"
                        android:text="Credit Card" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".3"
                        android:text="Gift Card" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_weight=".3"
                        android:text="Other" />


                </LinearLayout>

                <RadioGroup
                    android:gravity="center"
                    android:id="@+id/rg_discount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <RadioButton
                        android:id="@+id/rb_ndisc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="No discount" />

                    <RadioButton
                        android:id="@+id/rb_rpdisc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Senior/PWD" />

                    <RadioButton
                        android:id="@+id/rb_ddisc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Diplomat" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/btn_printBaKamo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_button_login"
                android:elevation="4dp"
                android:onClick="print"
                android:text="Complete Transaction"
                android:textColor="@color/myColorWhite"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.CardView>








    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:elevation="2dp"
        app:layout_flexBasisPercent="@fraction/fraction100percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="10dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textAlignment="center"
                android:textColor="@color/myColorHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction Details"
                android:textSize="20dp"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/myColorFont"
                    android:layout_gravity="end"
                    android:textAlignment="viewEnd"
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Vatable :"
                    android:textSize="18dp" />

                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/lbl_subtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="0.00"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/myColorHeading"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:text="Tax :"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/myColorFont"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/lbl_tax"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="0.00"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/myColorHeading"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:text="Discount :"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/myColorFont"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/lbl_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="0.00"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/myColorHeading"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:text="Total :"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/myColorFont"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/lbl_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="0.00"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/myColorHeading"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/myColorDialogBG"
                android:orientation="horizontal"
                android:padding="16dp">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:textColor="@color/myColorHeading"
                    android:layout_gravity="end"
                    android:textAlignment="viewEnd"
                    android:id="@+id/lbl_dc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Due :"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/lbl_due"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="0.00"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/myColorEditTextDialogDisable"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</com.google.android.flexbox.FlexboxLayout>
