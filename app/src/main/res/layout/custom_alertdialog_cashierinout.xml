<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/myColorDialogBG">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:id="@+id/rg_inout">

            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IN"
                android:id="@+id/rgIN"/>
            <android.support.v7.widget.AppCompatRadioButton
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OUT"
                android:id="@+id/rgOUT"/>
        </RadioGroup>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etValueCashinOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_dialog"
            android:elevation="2dp"
            android:hint="VALUE"
            android:textColor="@color/myColorBackgroundWhite"
            android:textColorHint="@color/myColorDialogBG" />

        <android.support.v7.widget.AppCompatSpinner
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerCashinout"
            android:entries="@array/cashinout"/>


        <android.support.v7.widget.AppCompatEditText
            android:textColor="@color/myColorBackgroundWhite"
            android:textColorHint="@color/myColorDialogBG"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edittext_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRemarks1"
            android:hint="REMARKS 1"/>

        <android.support.v7.widget.AppCompatEditText
            android:textColor="@color/myColorBackgroundWhite"
            android:textColorHint="@color/myColorDialogBG"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edittext_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRemarks2"
            android:hint="REMARKS 2"/>

        <android.support.v7.widget.AppCompatEditText
            android:textColor="@color/myColorBackgroundWhite"
            android:textColorHint="@color/myColorDialogBG"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edittext_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRemarks3"
            android:hint="REMARKS 3"
            android:visibility="gone"/>

        <android.support.v7.widget.AppCompatEditText
            android:textColor="@color/myColorBackgroundWhite"
            android:textColorHint="@color/myColorDialogBG"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edittext_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRemarks4"
            android:hint="REMARKS 4"
            android:visibility="gone"/>

        <android.support.v7.widget.AppCompatButton
            android:elevation="2dp"
            android:textColor="@color/myColorBackgroundWhite"
            android:textStyle="bold"
            android:background="@drawable/custom_button_payment_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddRemarksCashinout"
            android:layout_marginTop="10dp"
            android:text="+ REMARKS"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <android.support.v7.widget.AppCompatButton
                android:elevation="2dp"
                android:textColor="@color/myColorBackgroundWhite"
                android:textStyle="bold"
                android:layout_weight=".5"
                android:background="@drawable/custom_button_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnSubmitCashinout"
                android:text="SUBMIT"/>

            <android.support.v7.widget.AppCompatButton
                android:elevation="2dp"
                android:textColor="@color/myColorBackgroundWhite"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_weight=".5"
                android:background="@drawable/custom_button_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancelCashinout"
                android:text="CANCEL"/>

        </LinearLayout>



    </LinearLayout>
</LinearLayout>